<% include ../partials/header %>

<div id="user-lists">
  <h1><%- list.title %> List:</h1>
  </div>
  <div class="tasks">
    <h2>Tasks:</h2>
      <% tasks.forEach( task => { %>
        <div class="task-list">
          <h3><%- task.task %></h3>
        </div>
      <% }) %>
      <form id="addTask" >
        <input name="newTask" />
        <button id="addNewTask" type="submit">Add New Task</button>
      </form>
  </div>
</div>

<% include ../partials/footer %>
